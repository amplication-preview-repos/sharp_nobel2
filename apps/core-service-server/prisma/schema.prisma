datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Website {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  pages       Page[]
  published   Boolean?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Page {
  components Component[]
  content    Json?
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  title      String?
  updatedAt  DateTime    @updatedAt
  website    Website?    @relation(fields: [websiteId], references: [id])
  websiteId  String?
}

model Component {
  createdAt DateTime @default(now())
  data      Json?
  id        String   @id @default(cuid())
  page      Page?    @relation(fields: [pageId], references: [id])
  pageId    String?
  typeField String?
  updatedAt DateTime @updatedAt
}

model Style {
  createdAt DateTime @default(now())
  css       String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
  websites  Website[]
}
